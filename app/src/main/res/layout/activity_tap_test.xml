<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tap_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ms.tests.TapTestActivity">

    <ImageView
        android:id="@+id/tap_test_bg"
        android:background="#222"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tap_test_title"
        android:text="3"
        android:textSize="100sp"
        android:textColor="#FFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <RelativeLayout
        android:id="@+id/tap_view"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/tap_test_area"
            android:background="@color/colorPrimaryDark"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tap_count_view"
            android:text="Taps: 0"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tap_test_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</RelativeLayout>
