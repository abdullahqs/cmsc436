<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tap_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ms.tests.tap.TapConfigActivity">

    <RadioGroup
        android:id="@+id/tap_config_hand"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:checked="true"
            android:text="Left Hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="27sp"
            android:id="@+id/tap_config_lefthand" />

        <RadioButton
            android:text="Right Hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tap_config_righthand"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp"
            android:textSize="27sp"
            />
    </RadioGroup>


    <Button
        android:text="Start Tests"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:id="@+id/tap_config_teststart"
        android:textSize="50sp"
        android:fontFamily="Roboto"
        android:background="#E0FF4F"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:minLines="2"
        android:textSize="24sp"
        android:hint="Please enter the number of tests."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="38dp"
        android:id="@+id/tap_config_numberoftests"
        android:layout_below="@+id/tap_config_hand"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
