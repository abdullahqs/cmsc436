<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#F1F7ED"
    tools:context="com.ms.tests.TestSelectionActivity">

    <Button
        android:text="Tap Test"
        android:layout_width="wrap_content"
        android:layout_height="250px"
        android:id="@+id/tapButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onTapClick"
        android:textSize="50sp"
        android:fontFamily="Roboto"
        android:background="#E0FF4F"
        android:textColor="#000000"
        />

    <Button
        android:text="Spiral Test"
        android:layout_width="wrap_content"
        android:layout_height="250px"
        android:layout_marginTop="16dp"
        android:id="@+id/spiralButton"
        android:layout_below="@+id/tapButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onSpiralClick"
        android:textSize="50sp"
        android:fontFamily="Roboto"
        android:background="#FF6663"
        android:textColor="#000000"
        />

    <Button
        android:text="Level Test"
        android:layout_width="wrap_content"
        android:layout_height="250px"
        android:id="@+id/levelButton"
        android:layout_below="@+id/spiralButton"
        android:layout_marginTop="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="50sp"
        android:onClick="onLevelClick"
        android:fontFamily="Roboto"
        android:background="#BFD7EA"
        android:textColor="#000000"
        />

</RelativeLayout>
