<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bubble_test_result"
    tools:context="com.ms.tests.bubble.BubbleTestResultsActivity">

    <Button
        android:padding="25dp"
        android:textSize="20sp"
        android:text="Share Results?"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/bubble_results_share_button" />

    <Button
        android:text="Restart"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bubble_results_restart_button"
        android:gravity="center"
        android:textSize="50sp"
        android:fontFamily="Roboto"
        android:layout_above="@+id/bubble_results_share_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="You popped x balloons!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bubble_results_pops"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginBottom="131dp"
        android:layout_above="@+id/bubble_results_restart_button"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
